@model CalculatorModel;


<h3>Enter Grades as a Percentage (I.E. 90)</h3>
<form method="post">
    <label>Assignments: </label>
    <input id="assignments" asp-for="Assignments" /> <br />
    <label>Group Projects: </label>
    <input id="gp" asp-for="Group_Projects" /><br />
    <label>Quizzes: </label>
    <input id="quiz" asp-for="Quizzes" /> <br />
    <label>Exams: </label>
    <input id="exam" asp-for="Exams" /> <br />
    <label>INTEX: </label>
    <input id="intex" asp-for="Intex" /> <br />
    <input id="btnsend" type="submit" value="Submit" />

    <div asp-validation-summary="All"></div>
</form>

<script src="~/lib/jquery/jquery-3.6.0.min (1).js"></script>
<script src="~/js/grades.js"></script>